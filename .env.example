# =============================================================================
# CDC Architecture POC - Environment Variables
# =============================================================================
# Copy this file to .env and modify as needed
# =============================================================================

# Solace Configuration
SOLACE_HOST=localhost
SOLACE_PORT=55555
SOLACE_VPN=default
SOLACE_USERNAME=admin
SOLACE_PASSWORD=admin

# PostgreSQL Configuration (Architecture A)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ods
POSTGRES_USER=cdc_user
POSTGRES_PASSWORD=cdc_pass

# REST API Configuration (Architecture B)
REST_API_URL=http://localhost:8000

# Generator Configuration
EVENTS_PER_MINUTE=5000
SCHEMA_EVOLUTION=true

# Spark Configuration
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=1g

# Flink Configuration
FLINK_TASKMANAGER_MEMORY=1600m

# Checkpoint Location
CHECKPOINT_LOCATION=/checkpoints

# Logging
LOG_LEVEL=INFO
